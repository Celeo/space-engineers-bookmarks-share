{
  "name": "typescript_react_template",
  "version": "0.1.0",
  "private": true,
  "author": {
    "email": "mattboulanger@fastmail.com",
    "name": "Celeo"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tsc --noEmit && eslint src/**/*.{ts,tsx} tests/*.ts && prettier --check {src,tests}",
    "lint:fix": "eslint --fix src/**/*.{ts,tsx} tests/*.ts && prettier -w {src,tests}"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@types/enzyme": "^3.10.7",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.14",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-jest": "^24.1.0",
    "jest-enzyme": "^7.1.2",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "surge": "^0.21.6",
    "ts-jest": "^26.4.1",
    "typescript": "~3.7.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "ignorePatterns": [
      "build/**/*"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.ts"
    ],
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/tests/styleMock.ts"
    }
  }
}
