{
  "name": "typescript_react_template",
  "version": "0.1.0",
  "private": true,
  "author": {
    "email": "mattboulanger@fastmail.com",
    "name": "Celeo"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tsc --noEmit && eslint src/**/*.{ts,tsx} tests/*.ts && prettier --check {src,tests}",
    "lint:fix": "eslint --fix src/**/*.{ts,tsx} tests/*.ts && prettier -w {src,tests}"
  },
  "dependencies": {
    "@supabase/supabase-js": "^1.9.0",
    "bulma": "^0.9.2",
    "react-hotkeys-hook": "^3.3.0",
    "react-modal": "^3.13.1",
    "react-router-dom": "^5.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.12.7",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-modal": "^3.12.0",
    "@types/react-router-dom": "^5.1.7",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "enzyme": "^3.11.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jest": "^24.1.3",
    "jest-enzyme": "^7.1.2",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.3",
    "surge": "^0.21.7",
    "ts-jest": "^26.4.4",
    "typescript": "~4.1.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "ignorePatterns": [
      "build/**/*"
    ],
    "rules": {
      "@typescript-eslint/ban-ts-comment": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.ts"
    ],
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/tests/styleMock.ts"
    }
  }
}
